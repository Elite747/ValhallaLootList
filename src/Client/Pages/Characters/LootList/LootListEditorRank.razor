<MudGrid>
    <MudItem md="3" lg="2"><b>Rank @Rank</b></MudItem>
    @foreach (var entry in Entries) 
    {
        <LootListEditorEntry Entry="entry" ItemsInRow="_itemsInRow" />
    }
</MudGrid>

@code {
    private int _itemsInRow;

    [Parameter] public int Rank { get; set; }
    [Parameter] public IEnumerable<LootListEntryDto> Entries { get; set; } = null!;

    protected override void OnParametersSet()
    {
        if (Entries is null) throw new ArgumentNullException(nameof(Entries));

        _itemsInRow = Entries.Count();
    }
}
