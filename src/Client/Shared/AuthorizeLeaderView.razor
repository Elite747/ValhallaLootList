<AuthorizeView Context="auth" Roles="@(LootMaster ? (AppRoles.LootMaster + "," + AppRoles.RaidLeader) : AppRoles.RaidLeader)">
    @if (TeamId.HasValue && auth.User.HasClaim(AppClaimTypes.RaidLeader, TeamId.Value.ToString()))
    {
        @ChildContent
    }
</AuthorizeView>

@code {
    [Parameter] public long? TeamId { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool LootMaster { get; set; }
}
