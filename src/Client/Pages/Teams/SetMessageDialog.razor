<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @(Approved ? "Approve" : "Deny") 
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            Set an optional message to send to the owner of this character. 
        </MudText>

        <MudTextField Label="Message"
                      @bind-Value="_message"
                      Variant="Variant.Filled"
                      Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="() => Dialog.Cancel()" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="() => Dialog.Close(DialogResult.Ok(_message))" Color="Color.Primary" Variant="Variant.Filled">Send</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string _message = string.Empty;

    [Parameter] public bool Approved { get; set; }
    [CascadingParameter] MudDialogInstance Dialog { get; set; } = null!;

    protected override void OnParametersSet()
    {
        if (Dialog is null) throw new ArgumentNullException(nameof(Dialog));
    }
}
