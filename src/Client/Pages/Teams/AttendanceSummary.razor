<MudText>
    Attendance: @Member.Attendance of @Member.AttendanceMax
    @if (Member.AttendanceBonus > 0)
    {
        <MudAvatar Size="Size.Small" Color="Color.Success">+@Member.AttendanceBonus</MudAvatar>
    }
</MudText>

@code {
    [Parameter] public MemberDto Member { get; set; } = null!;

    protected override void OnParametersSet()
    {
        if (Member is null) throw new ArgumentNullException(nameof(Member));
    }
}
