@page "/Teams/{team}/Standings/{encounter?}"
@inject ApiClient Api
@inject NavigationManager Nav 

<ApiExecutor Operation="() => Api.Teams.Get(Team)" Context="team">
    <Standings ShowExternalLink="false" Team="team" SelectedEncounterId="@Encounter" SelectedEncounterIdChanged="OnEncounterChanged" />
</ApiExecutor>

@code {
    [Parameter] public string Team { get; set; } = string.Empty;
    [Parameter] public string? Encounter { get; set; }

    private void OnEncounterChanged(string? encounterId)
    {
        Nav.NavigateTo($"teams/{Team}/standings/{encounterId}");
    }
}